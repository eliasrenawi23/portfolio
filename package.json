{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@react-email/components": "^0.0.7",
    "@react-email/tailwind": "^0.0.8",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.5",
    "next": "^13.4.8",
    "react": "^18",
    "react-dom": "^18",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.12.0",
    "react-intersection-observer": "^9.5.3",
    "react-vertical-timeline-component": "^3.6.0",
    "resend": "^0.16.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "prettier",
      "react",
      "react-hooks",
      "jsx-a11y",
      "@typescript-eslint",
      "import"
    ],
    "extends": [
      "airbnb",
      "airbnb-typescript",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.eslint.json"
    },
    "ignorePatterns": [
      "*.stories.tsx"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 2
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never",
          "tsx": "never"
        }
      ],
      "import/no-cycle": [
        "error",
        {
          "maxDepth": 10,
          "ignoreExternal": true
        }
      ],
      "react/function-component-definition": 0,
      "import/no-import-module-exports": 0,
      "import/prefer-default-export": 0,
      "no-return-assign": 0,
      "react/require-default-props": 0,
      "radix": 0,
      "import/no-relative-packages": 0,
      "no-nested-ternary": 0,
      "react/no-arrow-function-lifecycle": 0,
      "react/no-array-index-ke": 0,
      "react/no-namespace": 0,
      "react/no-invalid-html-attribute": 0,
      "react/no-unstable-nested-components": 0,
      "react/no-unused-class-component-methods": 0,
      "react/prefer-exact-props": 0,
      "react/no-array-index-key": 0,
      "react/jsx-props-no-spreading": 0,
      "no-extra-boolean-cast": 0,
      "import/no-extraneous-dependencies": 0,
      "no-empty": 0,
      "guard-for-in": 0,
      "no-restricted-syntax": 0,
      "prefer-destructuring": "warn"
    },
    "settings": {
      "import/extensions": [
        ".ts",
        ".tsx"
      ],
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ],
          "moduleDirectory": [
            "node_modules",
            "src/"
          ]
        },
        "typescript": {
          "alwaysTryTypes": true,
          "project": "./tsconfig.json"
        }
      },
      "import/ignore": [
        "types"
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-vertical-timeline-component": "^3.3.6",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.2",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}